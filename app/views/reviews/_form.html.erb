<%= simple_form_for [@cocktail, @review], html: { class: 'd-flex flex-column'} do |f| %>
	<%= f.label 'Rating*' %>
	<%= f.select :rating, [5, 4, 3, 2, 1], input_html: { class: 'form-control' }, label: false %>
	<%= f.label 'Content*' %>
	<%= f.input :content, label: false %>
	<%= f.submit 'Add review', class: 'btn btn-primary' %>
<% end %>